{
  "workflow_description": {
    "name":"count_feature_rna",
    "version": 1.0,
    "label":"Count feature",
    "type":"count_feature_rna",
    "inputs":[
      "qc_reports/{sample}/raw_fastqc/*",
      "qc_reports/{sample}/*/trim_stats*.log",
      "mapped/*",
      "*/{sample}*fastq.gz"
    ],
    "outputs":[
      "qc_reports/*",
      "mapped/*.bam*"
    ],
    "report_index": "qc_reports/final_alignment_report.html",
    "reports":[
      "qc_reports/*.html",
      "qc_reports/*.pdf",
      "qc_reports/*.png",
      "qc_reports/*.csv"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "UMI",
    "umi_usage",
    "reference",
    "lib_ROI",
    "trim_adapters",
    "strandness"
  ],
  "gui_params" : {
    "primary": {
      "lib_ROI": {
        "label": "Regions of interest",
        "type": "enum",
        "default": "wgs",
        "list": ##INCLUDE:reference_info/lib_ROI.json##
      }
    },
    "detailed": {
      "count_over": {
        "label": "Count over",
        "type": "enum",
        "default": "exon",
        "list": {
          "exon": "Exon",
          "gene": "Gene",
          "transcript": "Transcript",
          "mRNA": "mRNA",
          "three_prime_utr": "Three prime UTR",
          "five_prime_utr": "Five prime UTR"
        }
      },
      "feature_count": {
        "label": "Feature count",
        "type": "bool",
        "default": true
      },
      "RSEM": {
        "label": "RSEM",
        "type": "bool",
        "default": false
      },
      "salmon": {
        "label": "Salmon",
        "type": "bool",
        "default": false
      },
      "kallisto": {
        "label": "Kallisto",
        "type": "bool",
        "default": false
      },
      "qc_samtools": {
        "label": "QC samtools",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_DNA": {
        "label": "QC qualimap DNA",
        "type": "bool",
        "default": false
      },
      "qc_picard_DNA": {
        "label": "QC picard DNA",
        "type": "bool",
        "default": false
      },
      "cross_sample_correlation": {
        "label": "Cross sample correlation",
        "type": "bool",
        "default": false
      },
      "qc_dupradar_RNA": {
        "label": "QC dupradar RNA",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_RNA": {
        "label": "QC qualimap RNA",
        "type": "bool",
        "default": true
      },
      "qc_picard_RNA": {
        "label": "QC picard RNA",
        "type": "bool",
        "default": true
      },
      "qc_biotypes_RNA": {
        "label": "QC biotypes RNA",
        "type": "bool",
        "default": true
      },
      "qc_fastq_screen_RNA": {
        "label": "QC fastq screen RNA",
        "type": "bool",
        "default": true
      },
      "qc_RSeQC_RNA": {
        "label": "QC RSeQC RNA",
        "type": "bool",
        "default": true
      },
      "biobloom": {
        "label": "Biobloom tools",
        "type": "bool",
        "default": false
      },
      "max_mapped_reads_to_run_biobloom": {
        "label": "Biobloom - max mapped ratio",
        "type": "int",
        "default": 100,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "biobloom": true
            }
          }
        }
      },
      "chip_extra_qc": {
        "label": "ChIP-seq additional QC",
        "type": "bool",
        "default": false
      },
      "lib_type": {
        "label": "Salmon library type",
        "type": "string",
        "default": "A",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon": true
            }
          }
        }
      },
      "gcbias": {
        "label": "Salmon GC bias",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon": true
            }
          }
        }
      },
      "numGibbsSamples": {
        "label": "Salmon number of Gibbs Samples",
        "type": "string",
        "default": "20",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon": true
            }
          }
        }
      }
    }
  }
}

