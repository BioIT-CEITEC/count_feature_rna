{
  "workflow_description": {
    "name":"count_feature_rna",
    "version": 1.2,
    "label":"Count feature",
    "type":"count_feature_rna",
    "inputs":[
      "mapped/*",
      "cleaned_fastq/{sample}*fastq.gz"
    ],
    "outputs":[
      "qc_reports/*",
      "logs/*"
    ],
    "report_index": "qc_reports/all_samples/multiqc_features.html",
    "reports":[
      "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "reference",
    "trim_adapters",
    "strandness"
  ],
  "gui_params" : {
    "primary": {},
    "detailed": {
       "featureCount": {
        "label": "FeatureCount",
        "type": "bool",
        "default": true
      },
      "count_over": {
        "label": "Count over (exon, gene, transcript, 3pUTR, 5pUTR)",
        "type": "string",
        "default": "exon",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "feature_count": true
            }
          }
        }
      },
      "RSEM": {
        "label": "RSEM",
        "type": "bool",
        "default": false
      },
      "salmon_align": {
        "label": "Salmon quantification BAM-based",
        "type": "bool",
        "default": false
      },
      "salmon_map": {
        "label": "Salmon quantification fastq-based",
        "type": "bool",
        "default": false
      },
      "kallisto": {
        "label": "Kallisto",
        "type": "bool",
        "default": false
      },
      "lib_type": {
        "label": "Salmon library type",
        "type": "string",
        "default": "A",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": true,
            "values": {
              "salmon_align": false,
              "salmon_map": false
            }
          }
        }
      },
      "gcbias": {
        "label": "Salmon GC bias",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon_map": true
            }
          }
        }
      },
      "numGibbsSamples": {
        "label": "Salmon number of Gibbs Samples",
        "type": "string",
        "default": "20",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon_map": true
            }
          }
        }
      }
    }
  }
}

