{
  "workflow_description": {
    "name":"count_feature_rna",
    "version": 2.0,
    "label":"Count feature",
    "type":"count_feature_rna",
    "inputs":[
      "mapped/{sample}.bam*",
      "mapped/transcriptome/{sample}.transcriptome.bam*",
      "processed_fastq/{sample}*fastq.gz"
    ],
    "outputs":["qc_reports/all_samples/multiqc_features.html"],
    "outputs_optional":[
      "qc_reports/{sample}/RSEM/{sample}.*.*",
      "qc_reports/{sample}/featureCount_exon/{sample}.*.*",
      "qc_reports/{sample}/featureCount_gene/{sample}.*.*",
      "qc_reports/{sample}/featureCount_transcript/{sample}.*.*",
      "qc_reports/{sample}/featureCount_3pUTR/{sample}.*.*",
      "qc_reports/{sample}/featureCount_5pUTR/{sample}.*.*",
      "qc_reports/{sample}/kallisto/{sample}.*.*",
      "qc_reports/{sample}/salmon_map/{sample}.*.*",
      "qc_reports/{sample}/salmon_aln/{sample}.*.*",
      "logs/{sample}/featureCount_*.log",
      "logs/{sample}/RSEM.log",
      "logs/{sample}/salmon_aln.log",
      "logs/{sample}/salmon_map.log",
      "logs/{sample}/kallisto.log"
    ],
    "report_index": "qc_reports/all_samples/multiqc_features.html",
    "reports":[
      "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "reference",
    "trim_adapters",
    "strandness"
  ],
  "gui_params" : {
    "primary": {},
    "detailed": {
       "featureCount": {
        "label": "FeatureCount",
        "type": "bool",
        "default": true
      },
      "count_over": {
        "label": "Count over (exon, gene, transcript, three_prime_UTR, five_prime_UTR)",
        "type": "string",
        "default": "exon",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "featureCount": true
            }
          }
        }
      },
      "RSEM": {
        "label": "RSEM",
        "type": "bool",
        "default": false
      },
      "salmon_align": {
        "label": "Salmon quantification BAM-based",
        "type": "bool",
        "default": false
      },
      "salmon_map": {
        "label": "Salmon quantification fastq-based",
        "type": "bool",
        "default": false
      },
      "kallisto": {
        "label": "Kallisto",
        "type": "bool",
        "default": false
      },
      "htseq": {
        "label": "HTSeq",
        "type": "bool",
        "default": false
      },
      "lib_type": {
        "label": "Salmon library type",
        "type": "string",
        "default": "A",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": true,
            "values": {
              "salmon_align": false,
              "salmon_map": false
            }
          }
        }
      },
      "gcbias": {
        "label": "Salmon GC bias",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon_map": true
            }
          }
        }
      },
      "numGibbsSamples": {
        "label": "Salmon number of Gibbs Samples",
        "type": "string",
        "default": "20",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "salmon_map": true
            }
          }
        }
      }
    }
  }
}

